{
  "name": "latexoocr-windows",
  "version": "0.1.0",
  "description": "Portable Electron port of LaTeXOCR for Windows.",
  "author": "LaTeXOCR",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder -w portable",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "katex": "^0.16.9"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.latexoocr.windows",
    "productName": "LaTeXOCR-Windows",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*"
    ],
    "asar": true,
    "win": {
      "target": "portable",
      "artifactName": "LaTeXOCR-Windows-${version}.exe",
      "icon": "build/icon.png"
    }
  }
}
